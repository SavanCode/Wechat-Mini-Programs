/* miniprogram/pages/video/video.wxss */
@import '../../iconfont/iconfontVideo.wxss';
.top{
    display:flex;
    flex-direction: row;
    justify-content: space-between;
    margin: 0 15rpx;
    height: 60rpx;
    padding-top: 15rpx;
}
.iconfont{
    font-size: 50rpx;
    color: #29acee;
 }
 .search{
    border: 1rpx solid #eee;
    flex: 1 0 auto;
    padding:5rpx 0;
    margin: 0 20rpx; 
    text-align: center;
    line-height: 60rpx;
    color: #29acee;
 }
 .navScroll{
     display: flex;
     flex-direction: row;
     white-space: nowrap;
     padding: 10rpx 0;
     height: 60rpx;
 }
 .title{ 
   margin: 0 15rpx;
   height: 50rpx; 
 }
 .active{  
    border-bottom: solid #29acee 1rpx; 
  }

.videoScroll{
  height: calc(100vh - 152rpx);
}
 
  
  .post-container {
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx; 
    padding-bottom: 5px;
  } 
  .post-auther-date { 
    margin: 10rpx 0 20rpx 10rpx;
    display: flex; 
  }
  .left{
    height: 60rpx;
    flex: 4 0 auto;
  }
.icon-share{
    margin-right: 20rpx;
  }
  
  .post-auther {
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx; 
  }
  
  .post-date {
    margin-left: 20rpx; 
    height: 60rpx;
    line-height: 60rpx;
    margin-bottom: 5rpx;
    font-size: small;
  } 
  .post-title {
    font-size: 34rpx;
    font-weight: 600;
    color: #333;
    margin-bottom: 10rpx;
    margin-left: 10rpx;
  }
  
  .post-image{
    margin-left: 16px;
    width: 100%;
    height: 340rpx;
    margin: auto 0;
    margin-bottom: 15px;
  }
  .myVideo, .videoPoster{
    height: 400rpx;
    width: 100%;
  }  
  .post-content{
    color: #666;
    font-size: 28rpx;
    margin-bottom: 20rpx;
    margin-left: 20rpx;
    letter-spacing: 2rpx;
    line-height: 40rpx;
  }
  
  .post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
  }
  
  .post-like-image{
    height: 16px;
    width: 16px;
    margin-right: 8px;
    vertical-align: middle;
  }
  
  .post-like-font{
      vertical-align: middle;
        margin-right: 20px;
  }