<view class="upper">
	<view class="bg">
		<image class="bgImg" src="../../images/user/bgImg2.jpg"></image>
	</view>
	<view class="userInfo" bindtap="toLogin">
		<view class="avatar">
			<image class="portrait" src='{{userInfo.avatarUrl?userInfo.avatarUrl:"../../images/user/missing-face.png"}}'></image>
		</view>
		<view class="usernameArea">
			<text class="username">{{userInfo.nickname?userInfo.nickname: '游客'}}</text>
		</view>
	</view>
	<view class="vip">
		<view class="vipTop">
			<view class="titL">
				<text class="iconfont icon-huangguan"></text>
				会员霸霸
			</view>
			<view class="titR">
				立即开通
			</view>
		</view>
		<image
		 class="vip-bg"
		 src="../../images/user/vip-card-bg.png"
		 mode=""
		></image>
		<text class="mu1">Music Union</text>
		<text class="mu2">开通会员听歌, 撸代码</text>
	</view>
</view>
<view class="lower">

	<view
	 class="cover-container"
	 bindtouchstart="handleTouchStart"
	 bindtouchmove="handleTouchMove"
	 bindtouchend="handleTouchEnd"
	 style="transform: {{coverTransform}}; transition: {{coveTransition}}"
	>
		<image class="arc" src="../../images/user/arc.png"></image>

		<view class="nav-section">
			<view
			 class="nav-item"
			 hover-class="common-hover"
			 hover-stay-time="50"
			>
				<text class="iconfont icon-xinfeng"></text>
				<text>我的消息</text>
			</view>
			<view
			 class="nav-item"
			 hover-class="common-hover"
			 hover-stay-time="50"
			>
				<text class="iconfont icon-renqun"></text>
				<text>我的好友</text>
			</view>
			<view
			 class="nav-item"
			 hover-class="common-hover"
			 hover-stay-time="50"
			>
				<text class="iconfont icon-geren"></text>
				<text>个人主页</text>
			</view>
			<view
			 class="nav-item"
			 hover-class="common-hover"
			 hover-stay-time="50"
			>
				<text class="iconfont icon-gexingzhuangban"></text>
				<text>个性装扮</text>
			</view>
		</view>

		<view class="personalContent">
			<view class="recentPlayContainer">
				<text class="title">最近播放</text>
				<!-- 最近播放记录 -->
				<scroll-view
				 wx:if="{{recentPlayList.length}}"
				 scroll-x
				 class="recentScroll"
				 enable-flex
				>
					<view
					 class="recentItem"
					 wx:for="{{recentPlayList}}"
					 wx:key="{{id}}"
					>
						<image src="{{item.song.al.picUrl}}"></image>
					</view>
				</scroll-view>
				<view wx:else>暂无播放记录</view>
			</view>

			<view class="personalList">
				<view class="card-item">
					<text class="title">我的音乐</text>
					<text class="more"> > </text>
				</view>
				<view class="card-item">
					<text class="title">我的收藏</text>
					<text class="more"> > </text>
				</view>
				<view class="card-item">
					<text class="title">我的电台</text>
					<text class="more"> > </text>
				</view>
			</view>
		</view>
	</view>
</view>

