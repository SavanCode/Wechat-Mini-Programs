<!--miniprogram/pages/login/login.wxml-->

<view class="main">
	<view class="LTbg">
		<view class="bg">LOGIN</view>
		<view class="title">
			欢迎回来！
		</view>
	</view>

	<view class="input-section">
		<view class="input-item">
			<text class="tit">手机号码</text>
			<input
			 type="text"
			 placeholder="请输入手机号码"
			 data-test="abc"
			 data-type="phone"
			 id="phone"
			 bindinput="handleInput"
			/>
		</view>
		<view class="input-item">
			<text class="tit">密码</text>
			<input
			 type="password"
			 placeholder="请输入密码"
			 data-test="abc"
			 data-type="password"
			 id="password"
			 bindinput="handleInput"
			/>
		</view>
	</view>
	<button class="confirm-btn" bindtap="login">登录</button>
	<view class="forget-section">
		忘记密码?
	</view>

	<view class="register-section">
		还没有账号?
		<text >马上注册</text>
	</view>

</view>

