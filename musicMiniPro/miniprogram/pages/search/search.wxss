/* miniprogram/pages/search/search.wxss */
@import '../../iconfont/iconfontSearch.wxss';
.searchBar{
  display: flex;
  flex-direction: row;
  height: 50rpx;
  margin-top:20rpx;
}
.searchInput {
  flex: 1 0 auto;
  margin-left: 20rpx;
  display: flex;
  height: 50rpx;
  width: 300rpx;
}
.iconfont{
 color:#29acee
}
input{
  flex: 1 0 auto;
  padding:0 20rpx;
}
.clear{
  height: 50rpx;
  width: 50rpx;
  text-align: center;
  color:#29acee
}
.cancel{
  margin: 0 20rpx;
  color:#29acee
}

.historyWapper{
  display: flex;
  flex-flow: wrap;
}
.historyTitle{
  height:35rpx;
  line-height: 35rpx;
  padding: 10rpx 10rpx;
}
.historyItem{
  border: #6eccfc; 
  color: white;
  background-color: #29acee;
  border-radius: 30rpx;
  padding: 10rpx 10rpx;
  height:30rpx;
 line-height: 30rpx;
 margin:0 20rpx;
 font-size: small;
}
.delete{
  font-size: x-large;
}
/* hotList */
.hotListWapper{
  margin:20rpx 20rpx 0 20rpx;
}
.title{
  padding-bottom: 20rpx;
}
.hotList{
  display: flex; 
  flex-wrap: wrap;
  border-top: solid 1px grey;
  padding: 20rpx 0 0 0;
}
.hotItem{
  display: flex;
  height: 50rpx;
  width: 50%;
  margin: 20rpx 0;
  font-size: small;
}
.index{
width:50rpx; 
}
.hotItem>text{
  line-height: 50rpx;
  height: 50rpx;
  display: block;
  overflow: hidden;
  white-space: nowrap;
  text-overflow:ellipsis;
}
.iconImg{
  height: 25rpx;
  width: 35rpx;
}
.searchContent{
  margin: 10rpx 0 10rpx 20rpx;
}
.searchItem{
  margin: 20rpx 0 20rpx 20rpx;
  border-bottom: 1rpx grey solid;
  width: 90%;
  line-height: 60rpx;
}
.content{
  padding-left:20rpx
}