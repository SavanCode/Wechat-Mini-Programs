/* miniprogram/pages/recommendSong/recommendSong.wxss */
@import '../../iconfont/iconfontRecommend.wxss';
page,.wapper{
    height: 100%;
} 
.wapper{
  display:flex;
  flex-direction: column
} 
.header,.header>image{
   width: 100%;
   height: 300rpx;
}
.listTop{
    display: flex;
    flex-direction: row;
    width: 100%;
    justify-content: space-between;
    margin: 20rpx 10rpx;
}
.changeMore{
  margin-right: 20rpx;
}
.listScroll{
  height: calc(100vh - 380rpx);
}
.scrollItem{
  display: flex;
  flex-direction: row;
  height: 100rpx;
   margin: 20rpx 10rpx;
}
.scrollItem > image{
  width: 100rpx;
  height: 100rpx; 
}
.musicInfo{
  flex:2 1 auto;
  height: 50rpx;
  display: flex;
  flex-direction: column; 
}
.musicInfo > text {
  height: 50rpx;
  line-height: 50rpx;
  padding-left: 20rpx;
  font-size: small;
}